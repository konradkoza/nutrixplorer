FROM maven:3.9.6-eclipse-temurin-21-alpine AS build
WORKDIR /app
COPY ../pom.xml pom.xml
COPY ../src src
RUN mvn clean package -Dmaven.test.skip

FROM openjdk:21-jdk-slim
COPY --from=build /app/target/*.jar /run/app/nutrixplorer.jar
ENTRYPOINT ["java", "-Xms256m", "-Xmx384m",  "-XX:+UseG1GC", "-jar", "/run/app/nutrixplorer.jar"]

EXPOSE 8080